@model IList<InvoiceMaker.Models.WorkDone>

<h1>Work Done</h1>

<p>
    @Html.ActionLink("Create work done", "Create", new { }, new { @class = "pure-button pure-button-primary" })
</p>

@if (Model.Count > 0)
{
    <table class="pure-table pure-table-bordered">
        <thead>
            <tr>
                <th>Client</th>
                <th>Work Type</th>
                <th>Started On</th>
                <th>Ended On</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var workDone in Model)
            {
                <tr>
                    <td>@workDone.ClientName</td>
                    <td>@workDone.WorkTypeName</td>
                    <td>@workDone.StartedOn.ToString("yyyy/MM/dd hh:mm tt")</td>
                    <td>
                        @if (workDone.EndedOn != null)
                        {
                            <text>@workDone.EndedOn.Value.ToString("yyyy/MM/dd hh:mm tt")</text>
                        }
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { Id = workDone.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
